.movable-area{
  width: 100%;
  height: 120rpx;
}
.movable-view{
  width: 100%;
  height: 100%;
}
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #ccc;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.content {
  width: 100%;
  margin-right:0;
  transition: all 0.4s;
  transform: translateX(180rpx);
  margin-left: -180rpx;
  display: flex;
  align-items: center;
}
.content .image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.del {
  background-color: orangered;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  transform: translateX(180rpx);
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  transform: translateX(0);
}
