.container{
  margin-top: 110rpx;
}
.swiper {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper swiper-item {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.column {
  width: 100%;
  display: flex;
}

.column .recommend,
.column .update {
  flex: 1;
  text-align: center;
  margin: 20rpx;
}

.column .title {
  height: 80rpx;
  line-height: 80rpx;
}

.column .recommend.active,
.column .update.active {
  border-bottom: 2rpx solid #f40;
  color: #f40;
  font-weight: bolder;
}

.column-content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.column-content .column-content-item {
  width: 50%;
  padding: 20rpx;
  box-sizing: border-box;
}

.column-content .column-content-item image {
  width: 100%;
  height: 250rpx;
  border-radius: 10rpx;
}

.column-content .column-content-item .column-content-item-news {
  display: flex;
  color: hotpink;
}

.column-content .column-content-item .column-content-item-news .left,
.column-content .column-content-item .column-content-item-news .right {
  flex: 1;
}
.column-content .column-content-item .column-content-item-news .left text{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.column-content .column-content-item .column-content-item-news .right{
  text-align: right;
}
.column-content .column-content-item .column-content-item-news .right .likes{
  padding: 0 10rpx;
}